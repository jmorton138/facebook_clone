<!DOCTYPE html>
<html>
  <head>
    <title>OdinFacebook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/ed6bc2265d.js" crossorigin="anonymous"></script>
  </head>

  <body>
  <nav id="nav-bar">
    <div>
      <ul>
      <li>
        <%= link_to "", root_path, class: "fas fa-home" %>
      </li>
      <% if current_user %>
        <li>
        <% if @requests.count > 0 %>
        <span class="fa-stack" data-count="<%= @requests.count %>">
          <%= link_to " ", friend_requests_path, class: "fas fa-flag" %>
        </span>
        <% else %>
          <%= link_to " ", friend_requests_path, class: "fas fa-flag" %>
          
        <% end %>
        </li>
        <li>
        <%= link_to "", users_path, class: "fas fa-users" %>

        </li>
        <li>
          <%= link_to "", user_path(current_user.id), class: "fas fa-user" %>
        </li>
        <li id="sign-out">
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
        </li>
      <% end %>
    </ul>
    </div>

  </nav>

    <%= yield %>
    <footer>
    
    </footer>
  </body>
</html>




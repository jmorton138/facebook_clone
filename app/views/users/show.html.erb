<div class="profile-wrapper">
    <div class="user-info">
        <div class="img">
            <%= image_tag(@user.avatar, style:'width:50%') if @user.avatar.attached? %>
        </div>
        <div>
            <%= @user.email %>
        </div>
        <% if current_user == @user %>
        <div class="edit">
            <%= link_to "Edit profile", edit_user_path(@user.id) %>
        </div>
        <% end %>
    </div>


    <%= render partial: "posts/posts" %>
</div>


